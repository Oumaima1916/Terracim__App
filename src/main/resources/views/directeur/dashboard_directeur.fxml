                <!-- NOTIFICATION -->
                <Button styleClass="top-icon">
                    <graphic>
                        <ImageView fitWidth="20"
                                   fitHeight="20"
                                   preserveRatio="true">
                            <image>
                                <Image url="/views/images/notification.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </HBox>
        </top>

        <!-- ================= SIDEBAR ================= -->
