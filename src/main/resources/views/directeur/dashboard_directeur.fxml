        <!-- ================= CONTENT ================= -->
        <center>
            <StackPane fx:id="contentArea"/>
        </center>

    </BorderPane>

    <!-- ================= OVERLAY BACKDROP ================= -->
    <Pane fx:id="overlayBackdrop"
          visible="false"
          managed="false"
          style="-fx-background-color: rgba(0,0,0,0.35);"
          onMouseClicked="#closeOverlay"/>

    <!-- ================= NOTIFICATION PANEL ================= -->
    <VBox fx:id="overlay"
          visible="false"
          managed="false"
          spacing="15"
          prefWidth="360"
          maxWidth="360"
          styleClass="notification-panel-vertical"
          StackPane.alignment="CENTER_RIGHT">

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT"
