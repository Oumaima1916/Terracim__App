<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controller.AboutController" style="-fx-background-color: linear-gradient(to bottom right, #0891b2, #0e7490); -fx-background-radius: 30;">

    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="30" right="50" bottom="30" left="50"/>
        </padding>

        <!-- Navigation Bar -->
        <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-background-color: transparent;">
            <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: normal;" onAction="#handleHome">
                <font>
                    <Font size="16"/>
                </font>
            </Button>
            <Button text="À propos" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-font-weight: bold;" onAction="#handleAbout">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Button>
            <Button text="Contact" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" onAction="#handleContact">
                <font>
                    <Font size="16"/>
                </font>
            </Button>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Login / Register" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" onAction="#handleLogin">
                <font>
                    <Font size="16"/>
                </font>
            </Button>
        </HBox>

        <!-- Hero Section -->
        <HBox spacing="50" alignment="CENTER" VBox.vgrow="ALWAYS" style="-fx-padding: 20 0 0 0;">
            <!-- Left Content -->
            <VBox spacing="25" alignment="CENTER_LEFT" prefWidth="600">
                <!-- Main Heading -->
                <VBox spacing="0">
                    <Label text="Bâtissez en confiance," wrapText="true" style="-fx-text-fill: white; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="52"/>
                        </font>
                    </Label>
                    <Label text="avec l'expertise TERRACIM" wrapText="true" style="-fx-text-fill: white; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="52"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Description -->
                <VBox spacing="15">
                    <Label text="TERRACIM est une entreprise marocaine leader dans le domaine de la construction et du bâtiment. Fondée en 2008, nous nous sommes imposés comme référence en matière de qualité et d'innovation." wrapText="true" style="-fx-text-fill: white; -fx-line-spacing: 3px;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>

                    <Label text="Notre mission est d'accompagner nos clients dans la réalisation de leurs projets, qu'il s'agisse de constructions résidentielles, commerciales ou industrielles. Nous offrons des solutions complètes incluant la conception, la planification, la construction et le suivi post-livraison." wrapText="true" style="-fx-text-fill: rgba(255,255,255,0.95); -fx-line-spacing: 3px;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>

                    <Label text="Avec une équipe de professionnels qualifiés et une expérience de plus de 15 ans, nous garantissons des projets livrés dans les délais, respectant les normes de qualité les plus élevées." wrapText="true" style="-fx-text-fill: rgba(255,255,255,0.95); -fx-line-spacing: 3px;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                </VBox>

                <!-- CTA Button -->
                <Button text="Commencer avec nous" style="-fx-background-color: white; -fx-text-fill: #0891b2; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 12 25;" onAction="#handleGetStarted">
                    <font>
                        <Font size="16"/>
                    </font>
                </Button>

                <!-- Stats Cards -->
                <HBox spacing="20" style="-fx-padding: 40 0 0 0;">
                    <!-- Card 1 -->
                    <VBox spacing="10" alignment="TOP_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" prefWidth="170" prefHeight="150">
                        <Label text="15+" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="36"/>
                            </font>
                        </Label>
                        <VBox spacing="2">
                            <Label text="Ans" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                            <Label text="d'expérience" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                        </VBox>
                        <Label text="Expertise marocaine authentique." wrapText="true" style="-fx-text-fill: #0891b2;">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Card 2 -->
                    <VBox spacing="10" alignment="TOP_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" prefWidth="170" prefHeight="150">
                        <Label text="200+" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="36"/>
                            </font>
                        </Label>
                        <VBox spacing="2">
                            <Label text="Projets" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                            <Label text="réalisés" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                        </VBox>
                        <Label text="Qualité et innovation continues." wrapText="true" style="-fx-text-fill: #0891b2;">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Card 3 -->
                    <VBox spacing="10" alignment="TOP_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" prefWidth="170" prefHeight="150">
                        <Label text="100%" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="36"/>
                            </font>
                        </Label>
                        <VBox spacing="2">
                            <Label text="Clients" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                            <Label text="satisfaits" style="-fx-text-fill: #0891b2; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>
                        </VBox>
                        <Label text="Engagement et transparence." wrapText="true" style="-fx-text-fill: #0891b2;">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Label>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Right Side: Image -->
            <StackPane alignment="BOTTOM_RIGHT" style="-fx-padding: 0 0 30 0;">
                <ImageView fitWidth="480" fitHeight="380" preserveRatio="true">
                    <Image url="@../../images/about_photo.jpg"/>
                </ImageView>
            </StackPane>
        </HBox>
    </VBox>
</StackPane>