<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.myapp.controller.RegisterController">

    <children>
        <StackPane alignment="CENTER">
            <StackPane maxWidth="900"
                       maxHeight="450"
                       prefWidth="800"
                       prefHeight="430"
                       styleClass="form-container">

                <VBox spacing="24"
                      alignment="TOP_CENTER"
                      styleClass="form-inner">

                    <!-- retour-->
                    <HBox alignment="TOP_LEFT">
                        <Button text="← Retour"
                                styleClass="form-back"
                                onAction="#goBack"/>
                    </HBox>

                    <!-- TITRE -->
                    <Label text="Créer un compte"
                           styleClass="form-title"
                           alignment="CENTER"/>

                    <!-- FORM GRILLE 2 COLONNES -->
                    <GridPane hgap="20" vgap="14" prefWidth="620">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <!-- Nom complet -->
                        <TextField fx:id="fullNameField"
                                   promptText="Nom complet"
                                   styleClass="form-field"
                                   GridPane.columnIndex="0"
                                   GridPane.rowIndex="0"/>

                        <!-- Mot de passe -->
                        <PasswordField fx:id="passwordField"
                                       promptText="Mot de passe"
                                       styleClass="form-field"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"/>

                        <!-- Numéro de téléphone -->
                        <TextField fx:id="phoneField"
                                   promptText="Numéro de téléphone"
                                   styleClass="form-field"
                                   GridPane.columnIndex="0"
                                   GridPane.rowIndex="1"/>

                        <!-- Confirmer le mot de passe (بدّلناها هنا مكان الإيميل) -->
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Confirmer le mot de passe"
                                       styleClass="form-field"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                        <!-- Adresse e-mail (دّيناها لتحت فـ rowIndex=2) -->
                        <TextField fx:id="emailField"
                                   promptText="Adresse e-mail"
                                   styleClass="form-field"
                                   GridPane.columnIndex="0"
                                   GridPane.columnSpan="2"
                                   GridPane.rowIndex="2"/>
                    </GridPane>


                    <!-- BOUTON -->
                    <HBox alignment="CENTER">
                        <Button text="S'inscrire"
                                styleClass="form-submit"
                                onAction="#handleRegister"/>
                    </HBox>

                </VBox>

            </StackPane>
        </StackPane>
    </children>
</StackPane>
