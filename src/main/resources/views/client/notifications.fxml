<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="rootBox"
           fx:controller="com.myapp.controller.NotificationsController">

    <!-- OVERLAY -->
    <VBox spacing="16"
          alignment="TOP_LEFT"
          prefWidth="360">

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT">
            <Label text="Notifications"
                   style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:white;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Tout supprimer"
                    onAction="#clearAll"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #e0f7ff;
                           -fx-underline: true;
                           -fx-cursor: hand;"/>
        </HBox>

        <!-- LIST -->
        <VBox fx:id="listContainer" spacing="10">

            <!-- NOTIF 1 -->
            <HBox spacing="10" styleClass="notif-row">
                <Label text="Client Y : Pouvez-vous confirmer le RDV du 10/12 ?"
                       wrapText="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="✕"
                        styleClass="notif-close"
                        onAction="#closeOne"/>
            </HBox>

            <!-- NOTIF 2 -->
            <HBox spacing="10" styleClass="notif-row">
                <Label text="Une nouvelle facture est disponible pour le chantier Résidence Atlas."
                       wrapText="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="✕"
                        styleClass="notif-close"
                        onAction="#closeOne"/>
            </HBox>

            <!-- NOTIF 3 -->
            <HBox spacing="10" styleClass="notif-row">
                <Label text="Le rapport journalier #42 a été ajouté."
                       wrapText="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="✕"
                        styleClass="notif-close"
                        onAction="#closeOne"/>
            </HBox>

            <!-- NOTIF 4 -->
            <HBox spacing="10" styleClass="notif-row">
                <Label text="Vous avez une nouvelle tâche sur le chantier Marina Bay."
                       wrapText="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="✕"
                        styleClass="notif-close"
                        onAction="#closeOne"/>
            </HBox>

            <!-- NOTIF 5 -->
            <HBox spacing="10" styleClass="notif-row">
                <Label text="La réunion avec le client est prévue demain à 09:30."
                       wrapText="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="✕"
                        styleClass="notif-close"
                        onAction="#closeOne"/>
            </HBox>

        </VBox>

    </VBox>

</StackPane>
