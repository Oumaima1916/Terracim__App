      alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.myapp.controller.DocumentsClientController"
      style="-fx-padding: 30;">

    <Label text="Tous les documents"
           style="-fx-font-size: 22px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #0A5C7D;" />

    <ListView fx:id="documentsList"
              prefWidth="700"
              prefHeight="400"/>

</VBox>
